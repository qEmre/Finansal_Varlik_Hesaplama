<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        .form-container {
            max-width: 400px;
            margin: 0 auto;
            margin-top: 150px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 5px;
        }

        .form-group input[type="text"],
        .form-group input[type="date"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        .btn-submit {
            display: inline-block;
            background-color: #007bff;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .btn-submit:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <form method="post" asp-controller="varlikGuncelle" asp-action="Update">
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="form-group">
                <label for="Name">Varlık Bilgisi:</label>
                <input name="Name" type="text" class="form-control" value="@Model.Name"/>
            </div>
            <div class="form-group">
                <label for="Tutari">Tutar:</label>
                <input name="Tutari" type="text" class="form-control" value="@Model.Tutari"/>
            </div>
            <div class="form-group">
                <label for="Tarihi">Tarih:</label>
                <input name="Tarihi" type="month" class="form-control" value="@Model.Tarihi.ToString("yyyy-MM")"/>
            </div>
            <button type="submit" class="btn-submit">Güncelle</button>
        </form>
    </div>
</body>
</html>